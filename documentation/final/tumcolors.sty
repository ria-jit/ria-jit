% .:: Required packages
% ----------------------------------------------------------------------------

\RequirePackage[table]{xcolor}
\RequirePackage{pgfkeys}
\RequirePackage{pgfopts}


% .:: Package options
% ----------------------------------------------------------------------------

\newif\if@tum@colormodel@cmyk@

\pgfqkeys{/TUM/colors}{
  colormodel/.is choice,
  colormodel/cmyk/.code = {\@tum@colormodel@cmyk@true},
  colormodel/rgb/.code = {\@tum@colormodel@cmyk@false},
  print/.is if = @tum@colormodel@cmyk@,
}

% set default option (colormodel=rgb)
\pgfkeys{/TUM/colors/colormodel=rgb}

% process package options
\ProcessPgfOptions{/TUM/colors}

% select color model based on option
\if@tum@colormodel@cmyk@
  \selectcolormodel{cmyk}
\else
  \selectcolormodel{rgb}
\fi


